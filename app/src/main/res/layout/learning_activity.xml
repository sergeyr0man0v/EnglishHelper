<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/learning_activity__section_name_tv"
            android:text=""
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/learning_activity__settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/activity_background"
            android:paddingRight="10dp"
            android:src="@drawable/ic_settings_activity__gear_img" />

    </LinearLayout>

    <View android:background="@color/black"
        android:layout_width = "match_parent"
        android:layout_height="2dp"/>

    <TextView
        android:id="@+id/learning_activity__number_of_words__tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/32"
        android:textColor="@color/secondary_text"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:padding="30dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>



    <TextView
        android:id="@+id/learning_activity__enValue_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        android:paddingBottom="30dp"
        android:paddingLeft="12dp"
        android:text="Word"/>

    <TextView
        android:id="@+id/learning_activity__ruValue_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textAlignment="center"
        android:padding="12dp"
        android:text="Слово"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp">

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/learning_activity__volume_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_volume_on_icon"
            />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/learning_activity__next_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_settings_activity__ok_btn"
            />
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"/>


</LinearLayout>
