<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mistake_item__word_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Слово"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mistake_item__wrong_answer__tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ваш ответ"
            android:textAlignment="center"
            android:textColor="@color/wrong_answer"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mistake_item__correct_answer__tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Правильный ответ"
            android:textAlignment="center"
            android:textColor="@color/correct_answer"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>