<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TestActivity"
    android:orientation="vertical"
    android:background="@color/activity_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/test_activity__section_name_tv"
            android:text=""
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/activity_background"
            android:paddingRight="10dp"
            android:src="@drawable/ic_settings_activity__gear_img" />

    </LinearLayout>

    <View android:background="@color/black"
        android:layout_width = "match_parent"
        android:layout_height="2dp"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/test_activity__current_word_tv"
        android:text="Слово"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:id="@+id/test_activity__radio_group">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="   word1"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="   word2"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="   word3"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="   word4"
            android:textColor="@color/black"
            android:textSize="20dp"/>

    </RadioGroup>

    <ImageButton
        android:id="@+id/test_activity__ok_btn"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/activity_background"
        android:src="@drawable/ic_settings_activity__ok_btn"
        android:layout_gravity="right"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>
